datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  createdAt   DateTime @default(now())
  description String?
  id          String   @id @default(cuid())
  name        String?
  orders      Order[]
  price       Float?
  updatedAt   DateTime @updatedAt
}

model Order {
  createdAt  DateTime  @default(now())
  id         String    @id @default(cuid())
  orderDate  DateTime?
  product    Product?  @relation(fields: [productId], references: [id])
  productId  String?
  quantity   Int?
  totalPrice Float?
  updatedAt  DateTime  @updatedAt
  user       User?     @relation(fields: [userId], references: [id])
  userId     String?
}

model MlmMatrix {
  commissionLimit Float?
  createdAt       DateTime @default(now())
  id              String   @id @default(cuid())
  level           Int?
  parentId        String?
  updatedAt       DateTime @updatedAt
  user            User?    @relation(fields: [userId], references: [id])
  userId          String?
}

model MlmBinary {
  commissionLimit Float?
  createdAt       DateTime @default(now())
  id              String   @id @default(cuid())
  leftUserId      String?
  rightUserId     String?
  updatedAt       DateTime @updatedAt
  user            User?    @relation(fields: [userId], references: [id])
  userId          String?
}

model User {
  createdAt   DateTime    @default(now())
  email       String?     @unique
  firstName   String?
  id          String      @id @default(cuid())
  lastName    String?
  mlmBinaries MlmBinary[]
  mlmMatrices MlmMatrix[]
  orders      Order[]
  password    String
  roles       Json
  updatedAt   DateTime    @updatedAt
  username    String      @unique
}
